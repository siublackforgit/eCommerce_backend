<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="generator.properties"/>
    <context id="MySqlContext" targetRuntime="MyBatis3" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="javaFileEncoding" value="UTF-8"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <jdbcConnection driverClass="${jdbc.driverClass}"
                        connectionURL="${jdbc.connectionURL}"
                        userId="${jdbc.userId}"
                        password="${jdbc.password}">
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>
        <javaModelGenerator targetPackage="com.ecommerce.entity" targetProject="src\main\java"/>
        <sqlMapGenerator targetPackage="com.ecommerce.mapper" targetProject="src\main\resources"/>
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.ecommerce.mapper"
                             targetProject="src\main\java"/>
        <table tableName="USER" domainObjectName="User" >
            <generatedKey column="USER_ID" sqlStatement="MySql" identity="true"/>
        </table>

<!--        <table tableName="%">-->
<!--            &lt;!&ndash; âœ… CORRECT: Use ignoreTable instead &ndash;&gt;-->
<!--            <ignoreTable tableName="innodb_%"/>-->
<!--            <ignoreTable tableName="mysql.%"/>-->
<!--            <ignoreTable tableName="sys.%"/>-->
<!--            <ignoreTable tableName="performance_schema.%"/>-->
<!--            <ignoreTable tableName="information_schema.%"/>-->
<!--        </table>-->
    </context>
</generatorConfiguration>